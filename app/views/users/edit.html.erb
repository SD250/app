<h1>Edytowanie Profilu</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch do |form| %>

  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div class="actions">
    <%= form.submit "Aktualizuj" %>
  </div>
<% end %>

