    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>
  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>
  <div class="actions">
    <%= form.submit "Create Reservation" %>
  </div>
<% end %>

